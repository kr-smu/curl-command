{
    "name": "CBun Dev Image: FireFly.release",
    "image": "registry.gitlab.com/kassowrobots-sdk/cbun-sdk/firefly:release",
    "runArgs": [
        "--network=host",
        "-v",
        "/dev:/dev",
        "--device-cgroup-rule",
        "c 188:* rmw"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    }      
}